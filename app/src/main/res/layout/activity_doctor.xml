<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageView"
            android:background="@color/colorDivision"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/division"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/doctorImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/doctor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctorNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/doctorImage"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    tools:text="송민주" />

                <LinearLayout
                    android:id="@+id/division1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/doctorNameTextView"
                    android:layout_toRightOf="@+id/doctorImage"
                    android:background="@color/colorDivision"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/clinicNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorNameTextView"
                    android:layout_toRightOf="@+id/doctorImage"
                    android:padding="10dp"
                    android:textSize="20sp"
                    tools:text="알리콘의원" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/division2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/doctorImage"
                android:background="#000000"
                android:orientation="horizontal">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/explainTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="25dp"
                android:text="최선을 다하는 알리콘 의원입니다"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/explainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ExplainTitle"
                android:padding="30dp"
                android:text="우리 병원은 최상의 인재풀을 보유하고 있습니다.\n \n성심성의껏 진료하는 원장, 송민주"
                android:textColor="#000000"
                android:textSize="23sp" />


            <LinearLayout
                android:id="@+id/division3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/explainContent"
                android:background="#000000"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/keywordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ExplainTitle"
                android:padding="20dp"
                android:text="진료과목"
                android:textColor="#000000"
                android:textSize="25sp" />


            <LinearLayout
                android:id="@+id/division4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/explainContent"
                android:background="#000000"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ExplainTitle"
                android:padding="30dp"
                android:text="#피부과 #내과 #가정의학과"
                android:textColor="#000000"
                android:textSize="23sp" />

            <LinearLayout
                android:id="@+id/division5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/keyword"
                android:background="#000000"
                android:orientation="horizontal" />

            <Button
                android:id="@+id/receiptBtn"
                android:layout_width="342dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="35dp"
                android:layout_marginStart="33dp"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="89dp"
                android:background="#5ea7ff"
                android:text="진료하기"
                android:textSize="25sp"></Button>

        </LinearLayout>

    </LinearLayout>
</ScrollView>