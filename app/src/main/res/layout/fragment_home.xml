<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <Button
        android:id="@+id/SearchButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/search"
        android:text="질병, 부위 등을 검색하세요"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Guidebutton"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/SearchButton"
        android:text="서비스 이용법"
        android:layout_marginBottom="50dp"/>
    <Button
        android:id="@+id/beautyButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/Guidebutton"
        android:text="미용의료"/>

    <Button
        android:id="@+id/skinButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/Guidebutton"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/beautyButton"
        android:text="피부질환"/>

    <Button
        android:id="@+id/dietButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/Guidebutton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_toRightOf="@+id/skinButton"
        android:text="다이어트"/>


    <Button
        android:id="@+id/lightButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/beautyButton"
        android:layout_marginLeft="40dp"
        android:text="경증질환"/>

    <Button
        android:id="@+id/oldButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/beautyButton"
        android:layout_toRightOf="@+id/lightButton"
        android:layout_marginLeft="20dp"
        android:text="만성질환"/>
    <Button
        android:id="@+id/mindButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/beautyButton"
        android:layout_toRightOf="@+id/oldButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:text="마음건강"/>

    <Button
    android:id="@+id/infoButton"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:text="의료정보"
    android:layout_marginTop="550dp"/>

</RelativeLayout>

