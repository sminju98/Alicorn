<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:gravity="center_horizontal"
        android:letterSpacing="-0.04"
        android:text="로그인"
        android:textColor="#2c2929"
        android:textSize="36sp"
        android:textStyle="normal" />

    <LinearLayout
    android:id="@+id/signinLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/emailEditText"
            android:background="@drawable/rectangle_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_login"
            android:hint="비밀번호"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:textColor="#222222"
            android:textSize="17sp"
            android:textStyle="normal"
            tools:text="아이디/비밀번호 찾기" />


    <Button
        android:id="@+id/emailLoginButton"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="로그인"
        android:textColor="@color/colorWhite"
        android:backgroundTint="#6782b7"
        android:background="@drawable/radius_24dp_corner"/>


        <Button
            android:id="@+id/emailSignupButton"
            android:layout_width="335dp"
            android:layout_height="58dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radius_24dp_corner"
            android:text="회원가입" />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/googleLoginButton"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/radius_24dp_corner"
            app:srcCompat="@drawable/googleg_standard_color_18"
            android:layout_marginBottom="10dp"/>


        <ImageButton
            android:id="@+id/kakaoLoginButton"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/radius_24dp_corner"
            app:srcCompat="@drawable/googleg_standard_color_18"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#f9e000"
            android:layout_toRightOf="@+id/googleLoginButton"/>

    </RelativeLayout>



</LinearLayout>

</RelativeLayout>